@model PagedList.IPagedList<MVCVooraadBeheer.Models.MagazineTransaction>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>id</th>
        <th>
            transactie tijd
        </th>
        <th>
            value
        </th>
        <th>
            transactie type
        </th>
        <th>
            locatie van
        </th>
        <th>
            locatie naar
        </th>
        <th>
            tijdschrift naam
        </th>
        <th>
            leverancier naam
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Value)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TransactionType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LocationFrom.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LocationTo.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Magazine.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Leverancier.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

<br />
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page }))
